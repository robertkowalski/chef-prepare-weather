#!/bin/bash

DIR=/var/www/<%= @appdir %>/current
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
NODE_PATH=/usr/local/lib/node_modules
APP_FILE=<%= @serverfile %>
PIDFILE=/var/run/<%= @appname %>.pid
LOGFILE=/var/log/<%= @appname %>.log


function start_app {
  echo "starting <%= @appdir %>"
  forever --pidFile $PIDFILE --sourceDir $DIR -a -l $LOGFILE start $APP_FILE
}

function stop_app {
  if [ -f $PIDFILE ]; then
    echo "stopping <%= @appdir %>"
    forever stop $APP_FILE
    rm -f $PIDFILE
  else
    echo "<%= @appdir %> is not running"
  fi
}

function status_app {
  if [ -f $PIDFILE ]; then
    echo "app running"
    exit 0
  else
    echo "app not running"
    exit 1
  fi
}

case $1 in
  start)
    start_app ;;
  stop)
    stop_app ;;
  status)
    status_app ;;
  restart)
    stop_app
    start_app
    ;;
  *)
    echo "usage: <%= @appname %> {start|stop|restart}"
    exit 1
    ;;
esac
exit 0

